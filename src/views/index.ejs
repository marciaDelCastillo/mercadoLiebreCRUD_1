<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% for(let i=0;i<productsVisited.length;i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=productsVisited[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productsVisited[i].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= (productsVisited[i].price-(productsVisited[i].discount*productsVisited[i].price/100))%></h2>
							<%if(productsVisited[i].discount!=0){%>
							<span><%= productsVisited[i].discount%> % OFF: </span>
							<% } %>
							<p><%= productsVisited[i].name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% for(let i=0;i<productsInSale.length;i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=productsInSale[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productsInSale[i].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= (productsInSale[i].price-(productsInSale[i].discount*productsInSale[i].price/100))%></h2>
							<%if(productsInSale[i].discount!=0){%>
							<span><%= productsInSale[i].discount%> % OFF: </span>
							<% } %>
							<p><%= productsInSale[i].name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>