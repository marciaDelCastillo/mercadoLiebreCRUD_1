<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%= busqueda %></h2>
			</div>
			<% for(let i=0;i<filtrados.length;i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=filtrados[i].id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%=filtrados[i].image%>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= finalPrice(filtrados[i].price,filtrados[i].discount)%></h2>
								<%if(filtrados[i].discount!=0){%>
								<span><%= filtrados[i].discount%> % OFF: </span>
								<% } %>
								<p><%= filtrados[i].name%></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<div class="col-12">
				<%if(filtrados.length==0){%>
				<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
				<%}%>
			</div>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>